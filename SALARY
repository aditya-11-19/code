#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int  t,i,n;
	cin>>t;
	while(t--)
	{
	    cin>>n;
	    int a[n],k=0,m=1e8;
	    for(i=0;i<n;i++)
	    {
	        cin>>a[i];
	        if(a[i]<m)
	        {
	           m=a[i];
	        }
	    }
	    for(i=0;i<n;i++)
	    {
	        k=k+a[i]-m;
	    }
	    cout<<k<<"\n";
	    
	}
	return 0;
}
